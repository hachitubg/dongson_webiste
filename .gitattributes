# Auto detect text files and perform LF normalization
* text=auto

# PHP files
*.php text eol=lf
*.css text eol=lf
*.js text eol=lf
*.json text eol=lf
*.md text eol=lf
*.sql text eol=lf
*.xml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.txt text eol=lf
*.html text eol=lf

# Shell scripts
*.sh text eol=lf

# Config files
.htaccess text eol=lf
.env* text eol=lf
.gitignore text eol=lf

# Image files (binary)
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.ico binary
*.svg binary
*.webp binary

# Font files (binary)
*.ttf binary
*.woff binary
*.woff2 binary
*.eot binary
*.otf binary

# Other binary files
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary

# Specific overrides
*.min.js text eol=lf
*.min.css text eol=lf
